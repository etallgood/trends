doctype html

html
  head
    script(
      type="module" 
      src="https://cdn.jsdelivr.net/npm/@ionic/core/dist/ionic/ionic.esm.js"
    )
    script(
      nomodule 
      src="https://cdn.jsdelivr.net/npm/@ionic/core/dist/ionic/ionic.js"
    )
    link(
      rel="stylesheet" 
      href="https://cdn.jsdelivr.net/npm/@ionic/core/css/ionic.bundle.css"
    )

  body
    ion-app
      ion-menu(content-id="main-content")
        ion-header: ion-toolbar(color="primary")
          ion-title Menu
        ion-content
          ion-list
            ion-list-header Navigate
          ion-menu-toggle(auto-hide="false")
            ion-item(button href="#")
              ion-icon(slot="start" name="home")
              ion-label Home

      ion-page.ion-page#main-content
        ion-header
          ion-toolbar
            ion-buttons(slot="start")
              ion-menu-toggle
                ion-button
                  ion-icon(slot="icon-only" name="menu")
            ion-title Header
        ion-content.ion-padding
          h1 Main Content
          p Click on the icon in the top left to toggle the menu

    ion-menu-controller


      ion-content.ion-padding
        h1 Main Content
        block main-content

      ion-footer: ion-toolbar
        ion-title Footer